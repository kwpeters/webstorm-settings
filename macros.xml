<application>
  <component name="ActionMacroManager">
    <macro name="append semicolon">
      <action id="EditorLineStartWithSelection" />
      <action id="EditorCut" />
      <action id="EditorLineEnd" />
      <typing text-keycode="59:0">;</typing>
      <action id="EditorLineStart" />
      <action id="EditorPaste" />
    </macro>
    <macro name="&lt;noname&gt;">
      <action id="EditorToggleStickySelection" />
      <action id="EditorLineEnd" />
      <typing text-keycode="91:1">{</typing>
      <action id="EditorLineStart" />
      <action id="EditorRight" />
      <typing text-keycode="68:0;69:0;83:0;67:0;59:1;32:0">desc:&amp;#x20;</typing>
      <action id="EditorLineStart" />
      <action id="EditorDown" />
      <action id="EditorDown" />
      <action id="EditorDown" />
      <action id="EditorDown" />
      <action id="EditorDown" />
    </macro>
    <macro name="throw word to end">
      <action id="EditorSelectWord" />
      <action id="EditorCut" />
      <action id="EditorLineEnd" />
      <typing text-keycode="32:0">&amp;#x20;</typing>
      <action id="EditorPaste" />
      <action id="EditorLineStart" />
    </macro>
    <macro name="kwpDeleteWhitespace">
      <action id="EditorNextWord" />
      <action id="EditorHungryBackSpace" />
    </macro>
  </component>
</application>